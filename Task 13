namespace IJunior_Task13
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int rubToUsd = 86, usdToRub = 76, rubToCny = 17, cnyToRub = 12, cnyToUsd = 6, usdToCny = 8;
            float rub;
            float usd;
            float cny;
            string userInput;
            float currencyCount;

            Console.WriteLine("Добро пожаловать в обменник валют. У нас вы можете обменять рубли, доллары и юани.");

            Console.Write("\nВведите баланс рублей: ");
            rub = Convert.ToSingle(Console.ReadLine());
            Console.Write("Введите баланс долларов: ");
            usd = Convert.ToSingle(Console.ReadLine());
            Console.Write("Введите баланс юаней: ");
            cny = Convert.ToSingle(Console.ReadLine());

            Console.WriteLine("\nДля продолжени нажмите любую клавишу, для выхода #");

            userInput = Console.ReadLine();

            while (userInput != "#")
            {
                Console.WriteLine("\n1 - Обменять рубли на доллары");
                Console.WriteLine("2 - Обменять доллары на рубли");
                Console.WriteLine("3 - Обменять рубли на юани");
                Console.WriteLine("4 - Обменять юани на рубли");
                Console.WriteLine("5 - Обменять юани на доллары");
                Console.WriteLine("6 - Обменять доллары на юани");
                Console.WriteLine("# - Выход");

                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case "1":
                        Console.WriteLine("\nОбмен рубли на доллары");
                        Console.Write("Сколько вы хотите обменять рублей:");
                        currencyCount = Convert.ToSingle(Console.ReadLine());
                        if (rub >= currencyCount)
                        {
                            rub -= currencyCount;
                            usd += currencyCount / rubToUsd;
                        }
                        else
                        {
                            Console.Write("\nНедопустимое коллличество рублей");
                        }

                        break;
                    case "2":
                        Console.WriteLine("\nОбмен долларов на рубли");
                        Console.Write("Сколько вы хотите обменять долларов:");
                        currencyCount = Convert.ToSingle(Console.ReadLine());
                        if (usd >= currencyCount)
                        {
                            usd -= currencyCount;
                            rub += currencyCount * usdToRub;
                        }
                        else
                        {
                            Console.Write("\nНедопустимое коллличество долларов");
                        }

                        break;
                    case "3":
                        Console.WriteLine("\nОбмен рубли на юани");
                        Console.Write("Сколько вы хотите обменять рублей:");
                        currencyCount = Convert.ToSingle(Console.ReadLine());
                        if (rub >= currencyCount)
                        {
                            rub -= currencyCount;
                            cny += currencyCount / rubToCny;
                        }
                        else
                        {
                            Console.Write("\nНедопустимое коллличество рублей");
                        }

                        break;
                    case "4":
                        Console.WriteLine("\nОбмен юани на рубли");
                        Console.Write("Сколько вы хотите обменять юаней:");
                        currencyCount = Convert.ToSingle(Console.ReadLine());
                        if (cny >= currencyCount)
                        {
                            cny -= currencyCount;
                            rub += currencyCount * cnyToRub;
                        }
                        else
                        {
                            Console.Write("\nНедопустимое коллличество юаней");
                        }

                        break;
                    case "5":
                        Console.WriteLine("\nОбмен юани на доллары");
                        Console.Write("Сколько вы хотите обменять юаней:");
                        currencyCount = Convert.ToSingle(Console.ReadLine());
                        if (rub >= currencyCount)
                        {
                            cny -= currencyCount;
                            usd += currencyCount / cnyToUsd;
                        }
                        else
                        {
                            Console.Write("\nНедопустимое коллличество юаней");
                        }

                        break;
                    case "6":
                        Console.WriteLine("\nОбмен долларов на юани");
                        Console.Write("Сколько вы хотите обменять долларов:");
                        currencyCount = Convert.ToSingle(Console.ReadLine());
                        if (usd >= currencyCount)
                        {
                            usd -= currencyCount;
                            cny += currencyCount * usdToCny;
                        }
                        else
                        {
                            Console.Write("\nНедопустимое коллличество долларов");
                        }

                        break;
                    case "#":
                        Console.WriteLine("\nВыход");

                        break;
                }

                Console.WriteLine($"\nВаш баланс - {rub} рублей, {usd} долларов, {cny} юаней");
            }
        }
    }
}
